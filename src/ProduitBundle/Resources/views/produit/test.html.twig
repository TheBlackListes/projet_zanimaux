{% extends 'front_office/base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block body %}
    <!-- Sub banner start -->
    <div class="sub-banner">
        <div class="overlay">
            <div class="container">
                <div class="breadcrumb-area">


                    <div class="top">
                        <h1>Mon profil</h1>
                    </div>
                    <ul class="breadcrumbs">
                        <li><a href="{{ path('homepage') }}">Accueil</a></li>
                        <li class="active">Produit</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="my-profile">
        <div class="container">

            {{ include('FOSUserBundle:Profile:sidebar.html.twig') }}

            <div class="col-lg-6 col-md-6 col-sm-5">
                <!-- My address start-->
                <div class="my-address">
                    <h1>Ajouter un produit </h1>

                    <form action="{{ path('Produit_new') }}" method="POST">
                        <div class="form-group col-sm-6">
                            <label>Libelle :</label>
                            {{ form_row(form.libelle , { 'attr': {'class': 'form-control'} }) }}
                            <span style="color: red">{{ form_errors(form.libelle) }}</span>
                        </div>

                        <div class="form-group col-sm-6">
                            <label>Type :</label>
                            {{ form_row(form.type , { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="form-group col-sm-6">
                            <label>Marque :</label>
                            {{ form_row(form.marque , { 'attr': {'class': 'form-control'} }) }}
                            <span style="color: red">{{ form_errors(form.marque) }}</span>
                        </div>


                        <div class="form-group col-sm-6">
                            <label>Catégorie :</label>
                            {{ form_row(form.categorie , { 'attr': {'class': 'form-control'} }) }}
                        </div>


                        <div class="form-group col-sm-6">
                            <label>Prix :</label>
                            {{ form_row(form.prix , { 'attr': {'class': 'form-control'} }) }}
                            <span style="color: red">{{ form_errors(form.prix) }}</span>
                        </div>

                        <div class="form-group col-sm-6">
                            <label>Etat :</label>
                            {{ form_row(form.etat , { 'attr': {'class': 'form-control'} }) }}
                            <span style="color: red">{{ form_errors(form.marque) }}</span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label>Image :</label>
                            {{ form_row(form.image , { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        <br clear="left"><br>
                        <input class="btn button-md button-theme" type="submit" value="Enregistrer">
                    </form>
                </div>
                <!-- My address end -->
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
                <!-- Avatar start -->
                <div class="edit-profile-photo">
                    <img src="img/agent-1.jpg" alt="agent-1" class="img-responsive">
                    <div class="change-photo-btn">
                        <div class="photoUpload">
                            <span><i class="fa fa-upload"></i> Télécharger Une Photo</span>
                            <input type="file" class="upload">
                        </div>
                    </div>
                </div>
                <!-- Avatar end -->
            </div>


        </div>
    </div>

{% endblock %}




