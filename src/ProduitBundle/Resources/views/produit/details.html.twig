{% extends 'front_office/base.html.twig' %}

{% block body %}

    <!-- Sub banner start -->
    <div class="sub-banner">
        <div class="overlay">
            <div class="container">
                <div class="breadcrumb-area">
                    <div class="top">
                        <h1>Properties Detail</h1>
                    </div>
                    <ul class="breadcrumbs">
                        <li><a href="{{ path('homepage') }}">Accueil</a></li>
                        <li class="active">Détails du produit</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Sub Banner end -->

    <!-- Properties details page start -->
    <div class="properties-details-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                    <div class="properties-details-section">
                        <!-- Header -->
                        <div class="heading-properties clearfix">
                            <div class="pull-left">
                                <h3> {{ produit.libelle }}</h3>
                                <p>
                                    {{ produit.categorie}}
                                </p>
                            </div>
                            <div class="pull-right">
                                <div class="col-lg-12">
                                   </div>
                            </div>
                        </div>
                        <!-- Properties detail slider start -->
                        <div class="properties-detail-slider simple-slider mrg-btm-40 ">
                            <div id="carousel-custom" class="carousel slide" data-ride="carousel">
                                <div class="carousel-outer">
                                    <!-- Wrapper for slides -->
                                    <div class="carousel-inner">


                                        <div class="item active">
                                            <img src="{{ asset('image/'~ annonce.image)}}" class="thumb-preview" alt="Chevrolet Impala">
                                        </div>
                                    </div>
                                    <!-- Controls -->

                                </div>
                                <!-- Indicators -->
                            </div>
                        </div>
                        <!-- Properties detail slider end -->

                        <!-- Specifications start -->
                        <div class="sidebar specifications mrg-btm-30 clearfix hidden-lg hidden-md">
                            <div class="section-heading">
                                <div class="media">
                                    <div class="media-left">
                                        <i class="flaticon-apartment"></i>
                                    </div>

                                </div>
                            </div>
                            <!-- Reviews Box -->
                            <div class="reviews-box clearfix">
                                <ul class="reviews-star-list">
                                    <li>
                                        <i class="fa fa-star"></i>
                                    </li>
                                    <li>
                                        <i class="fa fa-star"></i>
                                    </li>
                                    <li>
                                        <i class="fa fa-star"></i>
                                    </li>
                                    <li>
                                        <i class="fa fa-star"></i>
                                    </li>
                                    <li>
                                        <i class="fa fa-star-o"></i>
                                    </li>
                                </ul>
                                <div class="reviews">156 reviews</div>
                                <a href="#" class="add-review">
                                    <i class="fa fa-plus-circle"></i>Add Review
                                </a>
                            </div>

                            <p>Text.<br><br>    Texte.</p>

                            <a href="#" class="wishlist-btn">
                                <span class="wishlist-btn-l">
                                    <i class="fa fa-plus"></i>
                                </span>
                                <span class="wishlist-btn-r">Add to favorite list</span>
                                <div class="clear"></div>
                            </a>
                            <a href="#" class="book-btn">
                                <span class="book-btn-l"><i class="fa fa-check"></i></span>
                                <span class="book-btn-r">Add to favorite list</span>
                                <div class="clear"></div>
                            </a>
                        </div>
                        <!-- Specifications end -->

                        <!-- Properties description start -->
                        <div class="properties-description mrg-btm-40 ">
                            <h3 class="heading">
                                Description
                            </h3>
                            <P> {{ annonce.description }} </P>
                        </div>
                        <!-- Properties description end -->

                        <!-- Properties condition start -->
                        <div class="properties-condition mrg-btm-40 ">
                            <h3 class="heading">
                                Détail de l'annonce
                            </h3>
                            <div class="row">
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <ul class="condition">
                                        <li>
                                            <a href="{{ path('fos_user_profile_show') }}">
                                                <label>Nom de l'annonceur: </label>
                                                {{ annonce.membre.username }}
                                            </a>
                                        </li>
                                        <li>
                                            {% if annonce.type=="Garde des animaux" %}
                                                <label>date:</label>
                                                <h3>{{ annonce.dateAnnonce|date('d/m/Y') }}</h3>
                                            {% endif %}
                                            {% if annonce.type=="Animal perdu" %}
                                                <label>date de perdu:</label>
                                                <h3>{{ annonce.datePerdu|date('d/m/Y') }}</h3>
                                            {% endif %}
                                            <label>date:</label>
                                            {% if annonce.type=="Promenade des animaux" %}
                                                {{ annonce.dateAnnonce|date('d/m/Y') }}
                                            {% endif %}
                                        </li>
                                        <li>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <ul class="">
                                        <li>
                                            <label>Periode:</label>
                                            {% if annonce.type=="Promenade des animaux" %}
                                                {{ annonce.periode }}
                                            {% endif %}
                                        </li>
                                        <li>
                                            <i class=""></i>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <ul class="condition">
                                        <li>
                                            <label>Telephone</label>
                                            {{ annonce.membre.telephone }}
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- Properties condition end -->

                    </div>

                </div>
                <div class="col-lg-4 col-md-4 col-xs-12">
                    <div class="sidebar right">



                        <!-- Agent widget start -->
                        <div class="sidebar sidebar-widget contact-form agent-widget">
                            <h3>
                                <a href="#"></a>
                            </h3>
                            <h4>
                                <i class="fa fa-phone"></i>
                                <span></span>
                            </h4>

                            <form id="agent_form" action="" method="POST" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group enter-email">
                                            <input type="email" name="email" class="input-text" placeholder="Votre adresse Email">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group number">
                                            <input type="text" name="tel" class="input-text"  placeholder="Votre telephone">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group message">
                                            <textarea class="input-text" name="text" placeholder="Je suis intéressé par cet animal et j'aimerais avoir plus de détails."></textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <button type="submit" class="button-md button-theme btn-block">Send Message</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- Agent widget end -->

                        <!-- Featured property box start -->

                        <!-- Social media box end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Properties details page end -->

{% endblock %}

