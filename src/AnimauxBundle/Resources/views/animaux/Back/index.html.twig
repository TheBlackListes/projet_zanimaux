{% extends 'back_office/base.html.twig' %}

{% block body %}

    {% block titre %}
        <title> Animaux List</title>
    {% endblock %}



<div id="page-wrapper">
    <div class="main-page">
        <div class="tables">
            <h2 class="title1">Tables des animaux</h2>

                {{ form_start(Form) }}

                {{ form_end(Form) }}

                    <div class="bs-example widget-shadow" data-example-id="contextual-table">

                            <table class="table">
                                <thead>
                                    <tr class="info">
                                        <th>ID</th>
                                        <th>Animal</th>
                                        <th>Type_animal</th>
                                        <th>Type_offre</th>
                                        <th>Race</th>
                                        <th>Sexe</th>
                                        <th>Age</th>
                                        <th>Prix</th>
                                        <th>Proprietaire</th>
                                        <th>Etat</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for animaux in animauxes %}
                                    <tr >
                                        <td><a href="{{ path('animaux_show', { 'id': animaux.id }) }}">{{ animaux.id }}</a></td>
                                        <td>{{ animaux.nom }}</td>
                                        <td>{{ animaux.typeanimal }}</td>
                                        <td>{{ animaux.typeoffre }}</td>
                                        <td>{{ animaux.race }}</td>
                                        <td>{{ animaux.sexe }}</td>
                                        <td>{{ animaux.age }}</td>
                                        <td>{{ animaux.prix }}</td>
                                        <td>{{ animaux.proprietaire }}</td>
                                        {% if animaux.etat == "valide" %}
                                        <td style="color: #009e11">{{ animaux.etat }}</td>
                                        {% endif %}
                                        {% if animaux.etat == "suspect" %}
                                            <td style="color: orange">{{ animaux.etat }}</td>
                                        {% endif %}
                                        {% if animaux.etat == "bloque" %}
                                            <td style="color: red">{{ animaux.etat }}</td>
                                        {% endif %}
                                        <td>
                                            <ul>
                                                <li>
                                                    <a href="{{ path('animaux_show', { 'id': animaux.id }) }}">show</a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
        </div>
    </div>
</div>

{% endblock %}
