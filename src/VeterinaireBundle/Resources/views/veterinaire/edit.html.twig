{% extends 'back_office/base.html.twig' %}

{% block body %}
    <h1>Veterinaire edit</h1>


<div id="page-wrapper">
    <div class="main-page">
        <div class="forms">

            <div class="form-grids row widget-shadow" data-example-id="basic-forms">
            <div class="row">

        <div class="form-three widget-shadow">
            <form class="form-horizontal" method="post">
             <div class="form-body">
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label" style="align-content: flex-end">name</label>
                    <div>
                        {{ form_widget(form.nom,{'attr':{'class':'form-control1'}}) }}

                        <span>{{ form_errors(form.nom) }}</span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">prenom</label>

                    {{ form_widget(form.prenom,{'attr':{'class':'form-control1'}}) }}
                    <span>{{ form_errors(form.prenom) }}</span>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">adress</label>

                    {{ form_widget(form.adresse,{'attr':{'class':'form-control1'}}) }}
                    <span>{{ form_errors(form.adresse) }}</span>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">mail</label>

                    {{ form_widget(form.mail,{'attr':{'class':'form-control1'}}) }}
                    <span>{{ form_errors(form.mail) }}</span>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">numéro téléphone</label>

                    {{ form_widget(form.telephone,{'attr':{'class':'form-control1'}}) }}
                    <span>{{ form_errors(form.telephone) }}</span>
                </div>


                <div>
                    <button type="submit" class="btn btn-default">Enregistrer</button>
                </div>

             </div>
            </form>
        </div>
            </div>
        </div>
        </div>
    </div>
</div>

{% endblock %}
